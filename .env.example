# Django Settings
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-4@%#$r$aj(b%w1kjd6l))v2@_5y%-t-))j5l$(hg!oop$f5zhs

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# A list of strings representing the host/domain names that this Django site can serve
# For production, add your domain names here (e.g., example.com, www.example.com)
ALLOWED_HOSTS=

# CORS Settings
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:5500,http://127.0.0.1:5500,http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:8000,http://127.0.0.1:8000

# CORS Allow Credentials
CORS_ALLOW_CREDENTIALS=True

# Database Configuration
# For SQLite (default development database)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# For PostgreSQL (production recommended)
# Uncomment and configure these if using PostgreSQL:
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=your_database_name
# DATABASE_USER=your_database_user
# DATABASE_PASSWORD=your_database_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Time Zone
TIME_ZONE=UTC

# Language Code
LANGUAGE_CODE=en-us
